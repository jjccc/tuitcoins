<hr>
<div class="row no-horizontal-margin">
  <div class="col-md-10 no-horizontal-padding">
    <div class="row no-horizontal-margin">
      <div class="col-md-6 no-horizontal-padding">
        <a href="<%= plan.link %>" target="_blank">
          <h4><%= plan.name %></h4>
        </a>
      </div>
      <div class="col-md-4 no-horizontal-padding">
        <h4><%= plan.category_name %></h4>
      </div>
    </div>
    <div class="row no-horizontal-margin">
      <div class="col-md-10 no-horizontal-padding">
        <h6 class="text-muted"><%= plan.tweet %></p>
      </div>
    </div>
  </div>
  <div class="col-md-1">
    <a class="btn btn-primary btn-sm" href="<%= edit_plan_path(plan.id) %>">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
  </div>
  <div class="col-md-1">
    <%= link_to plan_path(plan.id), :method => :delete, :class => "btn btn-primary btn-sm" do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </div>
</div>
